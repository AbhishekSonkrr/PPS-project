{
    "files.exclude": {
        "**/.git": true,
        "**/build": true,
        "**/node_modules": true,
        "**/.idea": true
    },
    "search.exclude": {
        "**/build": true,
        "**/node_modules": true
    },
    "files.watcherExclude": {
        "**/build/**": true,
        "**/node_modules/**": true
    },
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/include",
        "${workspaceFolder}/src"
    ],
    "C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json",
    "C_Cpp.errorSquiggles": "enabled"
}